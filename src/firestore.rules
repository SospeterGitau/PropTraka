
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces a strict user-ownership model. Each document is secured
     * such that only the owner (identified by `ownerId`) can access it.
     * IMPORTANT: `list` is only allowed if the query includes a `where('ownerId', '==', request.auth.uid)` clause.
     */

    match /{collection}/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
      allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }

    /**
     * @description Secures user settings. Users can read and write their own settings document.
     */
    match /userSettings/{userId} {
      allow read, create, update, delete: if request.auth.uid == userId;
      allow list: if false; // List should not be allowed for user settings
    }
  }
}
