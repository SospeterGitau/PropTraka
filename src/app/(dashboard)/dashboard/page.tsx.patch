  return properties.map(prop => {
    const propRevenue = revenue
      .filter(r => r.propertyId === prop.id)
      .reduce((sum, r) => sum + (r.amountPaid || 0), 0);
    
    const propExpenses = expenses
      .filter(e => e.propertyId === prop.id)
      .reduce((sum, e) => sum + (e.amount || 0), 0);

