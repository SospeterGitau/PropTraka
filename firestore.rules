rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // This rule applies to all top-level collections in the database.
    match /{document=**} {
      // A user can read or write a document if they are authenticated and the document's `ownerId`
      // matches their own user ID. This secures individual document access.
      allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }
  }
}
