rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is made by a signed-in user.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of an existing document.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Properties owned by a specific user.
     * @path /users/{userId}/properties/{propertyId}
     * @allow (create) User 'user123' can create a new property under their user ID.
     * @deny (create) User 'user456' cannot create a property under user 'user123's ID.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/properties/{propertyId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    /**
     * @description Tenants related to a specific property, owned by a user. Includes denormalized `ownerId` from the parent property document.
     * @path /users/{userId}/properties/{propertyId}/tenants/{tenantId}
     * @allow (create) User 'user123' can create a new tenant under their property.
     * @deny (create) User 'user456' cannot create a tenant under user 'user123's property.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/properties/{propertyId}/tenants/{tenantId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    /**
     * @description Rental payments made for a specific property, owned by a user. Includes denormalized `ownerId` from the parent property document.
     * @path /users/{userId}/properties/{propertyId}/rentalPayments/{rentalPaymentId}
     * @allow (create) User 'user123' can create a new rental payment under their property.
     * @deny (create) User 'user456' cannot create a rental payment under user 'user123's property.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/properties/{propertyId}/rentalPayments/{rentalPaymentId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    /**
     * @description Expenses related to a specific property, owned by a user. Includes denormalized `ownerId` from the parent property document.
     * @path /users/{userId}/properties/{propertyId}/expenses/{expenseId}
     * @allow (create) User 'user123' can create a new expense under their property.
     * @deny (create) User 'user456' cannot create an expense under user 'user123's property.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/properties/{propertyId}/expenses/{expenseId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    /**
     * @description Appointments related to a specific property, owned by a user. Includes denormalized `ownerId` from the parent property document.
     * @path /users/{userId}/properties/{propertyId}/appointments/{appointmentId}
     * @allow (create) User 'user123' can create a new appointment under their property.
     * @deny (create) User 'user456' cannot create an appointment under user 'user123's property.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/properties/{propertyId}/appointments/{appointmentId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    /**
     * @description Alerts related to a specific property, owned by a user. Includes denormalized `ownerId` from the parent property document.
     * @path /users/{userId}/properties/{propertyId}/alerts/{alertId}
     * @allow (create) User 'user123' can create a new alert under their property.
     * @deny (create) User 'user456' cannot create an alert under user 'user123's property.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/properties/{propertyId}/alerts/{alertId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    /**
     * @description Maintenance requests for properties owned by a specific user.
     * @path /users/{userId}/maintenanceRequests/{maintenanceRequestId}
     * @allow (create) User 'user123' can create a new maintenance request under their user ID.
     * @deny (create) User 'user456' cannot create a maintenance request under user 'user123's ID.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/maintenanceRequests/{maintenanceRequestId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    /**
     * @description Fixes: Missing or insufficient permissions to list changelog
     * @path /users/{userId}/changelog
     * @allow (list) User 'user123' can list their own changelog
     * @deny (list) User 'user456' cannot list the changelog for 'user123'
     * @principle Grants the owner list permissions for user scoped subcollections
     */
    match /users/{userId}/changelog/{documentId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
    }
  }
}