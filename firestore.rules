rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
        return isSignedIn() && resource.data != null && request.auth.uid == userId;
    }

    /**
     * @description Secures the user's root document. Allows creating the user's document if the authenticated user's ID matches the document ID.
     * @path /users/{userId}
     * @allow (create) - An authenticated user can create their own document.
     * @deny (create) - An unauthenticated user cannot create a user document.
     * @deny (update) - No one can update the user document.
     * @deny (delete) - No one can delete the user document.
     * @principle Enforces user-ownership for the root user document.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if false;
    }

    /**
     * @description Manages properties owned by a specific user.
     * @path /users/{userId}/properties/{propertyId}
     * @allow (create) - A user can create a property under their user ID.
     * @allow (update) - A user can update a property under their user ID.
     * @allow (delete) - A user can delete a property under their user ID.
     * @deny (create) - A user cannot create a property under another user's ID.
     * @deny (update) - A user cannot update a property under another user's ID.
     * @deny (delete) - A user cannot delete a property under another user's ID.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/properties/{propertyId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages tenants related to a specific property.
     * @path /users/{userId}/properties/{propertyId}/tenants/{tenantId}
     * @allow (create) - A user can create a tenant under their property.
     * @allow (update) - A user can update a tenant under their property.
     * @allow (delete) - A user can delete a tenant under their property.
     * @deny (create) - A user cannot create a tenant under another user's property.
     * @deny (update) - A user cannot update a tenant under another user's property.
     * @deny (delete) - A user cannot delete a tenant under another user's property.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/properties/{propertyId}/tenants/{tenantId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages rental payments related to a specific property.
     * @path /users/{userId}/properties/{propertyId}/rentalPayments/{rentalPaymentId}
     * @allow (create) - A user can create a rental payment under their property.
     * @allow (update) - A user can update a rental payment under their property.
     * @allow (delete) - A user can delete a rental payment under their property.
     * @deny (create) - A user cannot create a rental payment under another user's property.
     * @deny (update) - A user cannot update a rental payment under another user's property.
     * @deny (delete) - A user cannot delete a rental payment under another user's property.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/properties/{propertyId}/rentalPayments/{rentalPaymentId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages expenses related to a specific property.
     * @path /users/{userId}/properties/{propertyId}/expenses/{expenseId}
     * @allow (create) - A user can create an expense under their property.
     * @allow (update) - A user can update an expense under their property.
     * @allow (delete) - A user can delete an expense under their property.
     * @deny (create) - A user cannot create an expense under another user's property.
     * @deny (update) - A user cannot update an expense under another user's property.
     * @deny (delete) - A user cannot delete an expense under another user's property.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/properties/{propertyId}/expenses/{expenseId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages appointments related to a specific property.
     * @path /users/{userId}/properties/{propertyId}/appointments/{appointmentId}
     * @allow (create) - A user can create an appointment under their property.
     * @allow (update) - A user can update an appointment under their property.
     * @allow (delete) - A user can delete an appointment under their property.
     * @deny (create) - A user cannot create an appointment under another user's property.
     * @deny (update) - A user cannot update an appointment under another user's property.
     * @deny (delete) - A user cannot delete an appointment under another user's property.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/properties/{propertyId}/appointments/{appointmentId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages alerts related to a specific property.
     * @path /users/{userId}/properties/{propertyId}/alerts/{alertId}
     * @allow (create) - A user can create an alert under their property.
     * @allow (update) - A user can update an alert under their property.
     * @allow (delete) - A user can delete an alert under their property.
     * @deny (create) - A user cannot create an alert under another user's property.
     * @deny (update) - A user cannot update an alert under another user's property.
     * @deny (delete) - A user cannot delete an alert under another user's property.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/properties/{propertyId}/alerts/{alertId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages maintenance requests for properties owned by a specific user.
     * @path /users/{userId}/maintenanceRequests/{maintenanceRequestId}
     * @allow (create) - A user can create a maintenance request under their user ID.
     * @allow (update) - A user can update a maintenance request under their user ID.
     * @allow (delete) - A user can delete a maintenance request under their user ID.
     * @deny (create) - A user cannot create a maintenance request under another user's ID.
     * @deny (update) - A user cannot update a maintenance request under another user's ID.
     * @deny (delete) - A user cannot delete a maintenance request under another user's ID.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/maintenanceRequests/{maintenanceRequestId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

        /**
     * @description Manages revenue.
     * @path /users/{userId}/revenue
     * @allow (list) - A user can list revenue under their user ID.
     * @principle Enforces document ownership for listing.
     */
    match /users/{userId}/revenue/{revenueId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}