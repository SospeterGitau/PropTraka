
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Secure all top-level collections with the same ownership-based rules
    match /{collectionName}/{docId} {
      // Allow single-document reads/writes if the user is the owner.
      allow read, write: if isOwner(resource.data.ownerId);

      // Allow collection queries (list) only if the query is filtered by the user's own ownerId.
      // This is crucial for allowing useCollection to work.
      allow list: if isOwner(request.query.get("where")[0][2]);
    }
  }
}
