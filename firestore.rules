rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner() {
      return request.auth != null && request.auth.uid == resource.data.ownerId;
    }

    // Helper function to check if a query is properly restricted
    function isQueryingOwnData() {
      return request.auth != null && request.query.where.get('ownerId', ['==']) == request.auth.uid;
    }

    // Generic rule for most collections
    match /{collection}/{docId}
      where collection in ['properties', 'revenue', 'expenses', 'maintenanceRequests', 'changelog'] {
        allow read, update, delete: if isOwner();
        allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
        allow list: if isQueryingOwnData();
    }
  }
}
