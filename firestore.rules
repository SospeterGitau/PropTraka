rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user is the owner of the document.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of the existing document.
     */
    function isExistingOwner(userId) {
      return isSignedIn() && request.auth.uid == resource.data.userId;
    }

    /**
     * @description Enforces that the authenticated user is the owner when creating a new document.
     */
    function isValidOwnerOnCreate(userId) {
        return request.resource.data.userId == userId;
    }

    /**
     * @description Enforces immutability of the owner field on update.
     */
    function isValidOwnerOnUpdate(userId) {
        return request.resource.data.userId == resource.data.userId;
    }

    /**
     * @description
     * The rule structure prevents listing all users.
     * It only allows access to data associated with the authenticated user's ID.
     */
    match /users/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if false;

      /**
       * @description Manages properties owned by a specific user.
       * @path /users/{userId}/properties/{propertyId}
       * @allow (create) - Authenticated user creates a new property under their user ID.
       * @deny (create) - Another user attempts to create a property under a different user ID.
       * @principle Enforces document ownership for writes.
       */
      match /properties/{propertyId} {
        allow get: if isSignedIn() && isOwner(userId);
        allow list: if isSignedIn() && isOwner(userId);
        allow create: if isSignedIn() && isOwner(userId);
        allow update: if isSignedIn() && isOwner(userId);
        allow delete: if isSignedIn() && isOwner(userId);

        /**
         * @description Manages tenants related to a specific property, owned by a user.
         * @path /users/{userId}/properties/{propertyId}/tenants/{tenantId}
         * @allow (create) - Authenticated user creates a new tenant under their property.
         * @deny (create) - Another user attempts to create a tenant under a different user or property.
         * @principle Enforces document ownership for writes, ensures data consistency.
         */
        match /tenants/{tenantId} {
          allow get: if isSignedIn() && isOwner(userId);
          allow list: if isSignedIn() && isOwner(userId);
          allow create: if isSignedIn() && isOwner(userId);
          allow update: if isSignedIn() && isOwner(userId);
          allow delete: if isSignedIn() && isOwner(userId);
        }

        /**
         * @description Manages rental payments made for a specific property, owned by a user.
         * @path /users/{userId}/properties/{propertyId}/rentalPayments/{rentalPaymentId}
         * @allow (create) - Authenticated user creates a new rental payment under their property.
         * @deny (create) - Another user attempts to create a rental payment under a different user or property.
         * @principle Enforces document ownership for writes, ensures data consistency.
         */
        match /rentalPayments/{rentalPaymentId} {
          allow get: if isSignedIn() && isOwner(userId);
          allow list: if isSignedIn() && isOwner(userId);
          allow create: if isSignedIn() && isOwner(userId);
          allow update: if isSignedIn() && isOwner(userId);
          allow delete: if isSignedIn() && isOwner(userId);
        }

        /**
         * @description Manages expenses related to a specific property, owned by a user.
         * @path /users/{userId}/properties/{propertyId}/expenses/{expenseId}
         * @allow (create) - Authenticated user creates a new expense under their property.
         * @deny (create) - Another user attempts to create an expense under a different user or property.
         * @principle Enforces document ownership for writes, ensures data consistency.
         */
        match /expenses/{expenseId} {
          allow get: if isSignedIn() && isOwner(userId);
          allow list: if isSignedIn() && isOwner(userId);
          allow create: if isSignedIn() && isOwner(userId);
          allow update: if isSignedIn() && isOwner(userId);
          allow delete: if isSignedIn() && isOwner(userId);
        }

        /**
         * @description Manages appointments related to a specific property, owned by a user.
         * @path /users/{userId}/properties/{propertyId}/appointments/{appointmentId}
         * @allow (create) - Authenticated user creates a new appointment under their property.
         * @deny (create) - Another user attempts to create an appointment under a different user or property.
         * @principle Enforces document ownership for writes, ensures data consistency.
         */
        match /appointments/{appointmentId} {
          allow get: if isSignedIn() && isOwner(userId);
          allow list: if isSignedIn() && isOwner(userId);
          allow create: if isSignedIn() && isOwner(userId);
          allow update: if isSignedIn() && isOwner(userId);
          allow delete: if isSignedIn() && isOwner(userId);
        }

        /**
         * @description Manages alerts related to a specific property, owned by a user.
         * @path /users/{userId}/properties/{propertyId}/alerts/{alertId}
         * @allow (create) - Authenticated user creates a new alert under their property.
         * @deny (create) - Another user attempts to create an alert under a different user or property.
         * @principle Enforces document ownership for writes, ensures data consistency.
         */
        match /alerts/{alertId} {
          allow get: if isSignedIn() && isOwner(userId);
          allow list: if isSignedIn() && isOwner(userId);
          allow create: if isSignedIn() && isOwner(userId);
          allow update: if isSignedIn() && isOwner(userId);
          allow delete: if isSignedIn() && isOwner(userId);
        }
      }

      /**
       * @description Manages maintenance requests for properties owned by a specific user.
       * @path /users/{userId}/maintenanceRequests/{maintenanceRequestId}
       * @allow (create) - Authenticated user creates a new maintenance request under their user ID.
       * @deny (create) - Another user attempts to create a maintenance request under a different user ID.
       * @principle Enforces document ownership for writes.
       */
      match /maintenanceRequests/{maintenanceRequestId} {
        allow get: if isSignedIn() && isOwner(userId);
        allow list: if isSignedIn() && isOwner(userId);
        allow create: if isSignedIn() && isOwner(userId);
        allow update: if isSignedIn() && isOwner(userId);
        allow delete: if isSignedIn() && isOwner(userId);
      }
      
      /**
       * @description Manages revenue for a specific user.
       * @path /users/{userId}/revenue
       * @allow (list) - Authenticated user lists revenue under their user ID.
       * @deny (list) - Another user attempts to list revenue under a different user ID.
       * @principle Enforces document ownership for reads.
       */
      match /revenue/{revenueId} {
        allow get: if isSignedIn() && isOwner(userId);
        allow list: if isSignedIn() && isOwner(userId);
        allow create: if isSignedIn() && isOwner(userId);
        allow update: if isSignedIn() && isOwner(userId);
        allow delete: if isSignedIn() && isOwner(userId);
      }
    }
  }
}