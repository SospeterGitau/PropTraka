rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read and write only their own documents in any top-level collection.
    // This rule applies to get, create, update, delete.
    match /{collection}/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerId;

      // Allow users to list (query) documents only if they filter by their own ownerId.
      // This is crucial for securing collection-wide queries.
      allow list: if request.auth != null && request.query.where.get('ownerId', '') == request.auth.uid;
    }
  }
}
