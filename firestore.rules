rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user is the owner of the document.
     */
    function isOwner(userId) {
      return isSignedIn() && userId == request.auth.uid;
    }

    /**
     * @description Checks if the authenticated user is the owner of the existing document.
     */
    function isExistingOwner() {
      return isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    /**
     * @description Enforces that the creatorId cannot be changed after creation.
     */
    function creatorIdIsImmutable(userId) {
      return resource.data.ownerId == userId;
    }

    /**
     * @description
     * Secures access to property documents owned by a specific user.
     *
     * @path /users/{userId}/properties/{propertyId}
     */
    match /users/{userId}/properties/{propertyId} {
      allow get: if isOwner(userId) && userId == request.auth.uid;
      allow list: if isOwner(userId) && userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid && userId == request.auth.uid;
      allow update: if isExistingOwner() && userId == request.auth.uid;
      allow delete: if isExistingOwner() && userId == request.auth.uid;
    }

    /**
     * @description
     * Secures access to tenant documents related to a specific property, owned by a user.
     *
     * @path /users/{userId}/properties/{propertyId}/tenants/{tenantId}
     */
    match /users/{userId}/properties/{propertyId}/tenants/{tenantId} {
      allow get: if isOwner(userId) && userId == request.auth.uid;
      allow list: if isOwner(userId) && userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid && userId == request.auth.uid;
      allow update: if isExistingOwner() && userId == request.auth.uid;
      allow delete: if isExistingOwner() && userId == request.auth.uid;
    }

    /**
     * @description
     * Secures access to rental payment documents related to a specific property, owned by a user.
     *
     * @path /users/{userId}/properties/{propertyId}/rentalPayments/{rentalPaymentId}
     */
    match /users/{userId}/properties/{propertyId}/rentalPayments/{rentalPaymentId} {
      allow get: if isOwner(userId) && userId == request.auth.uid;
      allow list: if isOwner(userId) && userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid && userId == request.auth.uid;
      allow update: if isExistingOwner() && userId == request.auth.uid;
      allow delete: if isExistingOwner() && userId == request.auth.uid;
    }

    /**
     * @description
     * Secures access to expense documents related to a specific property, owned by a user.
     *
     * @path /users/{userId}/properties/{propertyId}/expenses/{expenseId}
     */
    match /users/{userId}/properties/{propertyId}/expenses/{expenseId} {
      allow get: if isOwner(userId) && userId == request.auth.uid;
      allow list: if isOwner(userId) && userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid && userId == request.auth.uid;
      allow update: if isExistingOwner() && userId == request.auth.uid;
      allow delete: if isExistingOwner() && userId == request.auth.uid;
    }

    /**
     * @description
     * Secures access to appointment documents related to a specific property, owned by a user.
     *
     * @path /users/{userId}/properties/{propertyId}/appointments/{appointmentId}
     */
    match /users/{userId}/properties/{propertyId}/appointments/{appointmentId} {
      allow get: if isOwner(userId) && userId == request.auth.uid;
      allow list: if isOwner(userId) && userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid && userId == request.auth.uid;
      allow update: if isExistingOwner() && userId == request.auth.uid;
      allow delete: if isExistingOwner() && userId == request.auth.uid;
    }

    /**
     * @description
     * Secures access to alert documents related to a specific property, owned by a user.
     *
     * @path /users/{userId}/properties/{propertyId}/alerts/{alertId}
     */
    match /users/{userId}/properties/{propertyId}/alerts/{alertId} {
      allow get: if isOwner(userId) && userId == request.auth.uid;
      allow list: if isOwner(userId) && userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid && userId == request.auth.uid;
      allow update: if isExistingOwner() && userId == request.auth.uid;
      allow delete: if isExistingOwner() && userId == request.auth.uid;
    }

    /**
     * @description
     * Secures access to maintenance request documents owned by a specific user.
     *
     * @path /users/{userId}/maintenanceRequests/{maintenanceRequestId}
     */
    match /users/{userId}/maintenanceRequests/{maintenanceRequestId} {
      allow get: if isOwner(userId) && userId == request.auth.uid;
      allow list: if isOwner(userId) && userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid && userId == request.auth.uid;
      allow update: if isExistingOwner() && userId == request.auth.uid;
      allow delete: if isExistingOwner() && userId == request.auth.uid;
    }
  }
}