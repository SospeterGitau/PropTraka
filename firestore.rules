
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for all top-level user-data collections
    match /{collection}/{docId}
      where collection in ['properties', 'revenue', 'expenses', 'maintenanceRequests', 'changelog'] {
      
      // Allow individual document access (read, update, delete) if the user is the owner.
      allow get, update, delete: if isOwner(resource.data.ownerId);

      // Allow document creation if the new document's ownerId is the user's ID.
      allow create: if isOwner(request.resource.data.ownerId);

      // Allow collection queries (list) ONLY if the query is filtering by the user's own ID.
      // This is crucial for securing multi-tenant data.
      allow list: if request.auth != null && request.query.get("where")[0][1] == "ownerId" && request.query.get("where")[0][2] == request.auth.uid;
    }
  }
}
