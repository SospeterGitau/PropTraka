rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(resource) {
      // Check if the requesting user is the owner of the document.
      return request.auth.uid == resource.data.ownerId;
    }

    function isQueryingOwnData() {
      // Check if a 'list' query is filtering for the user's own documents.
      return request.auth.uid == request.query.where.ownerId;
    }

    // Secure the 'properties' collection
    match /properties/{propertyId} {
      allow get, update, delete: if isOwner(get(after:path()));
      allow create: if isOwner(request.resource);
      allow list: if isQueryingOwnData();
    }

    // Secure the 'revenue' collection
    match /revenue/{revenueId} {
      allow get, update, delete: if isOwner(get(after:path()));
      allow create: if isOwner(request.resource);
      allow list: if isQueryingOwnData();
    }

    // Secure the 'expenses' collection
    match /expenses/{expenseId} {
      allow get, update, delete: if isOwner(get(after:path()));
      allow create: if isOwner(request.resource);
      allow list: if isQueryingOwnData();
    }

    // Secure the 'maintenanceRequests' collection
    match /maintenanceRequests/{requestId} {
      allow get, update, delete: if isOwner(get(after:path()));
      allow create: if isOwner(request.resource);
      allow list: if isQueryingOwnData();
    }

    // Secure the 'changelog' collection
    match /changelog/{changelogId} {
      allow get, update, delete: if isOwner(get(after:path()));
      allow create: if isOwner(request.resource);
      allow list: if isQueryingOwnData();
    }
  }
}
