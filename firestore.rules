/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for rental property data.
 *
 * Core Philosophy:
 * All data is nested under /users/{userId}, ensuring that users can only access their own data.
 * Each user owns properties, and subcollections like tenants, rental payments, expenses, appointments, and alerts are nested under each property document.
 *
 * Data Structure:
 * /users/{userId}/properties/{propertyId}: Properties owned by a specific user.
 * /users/{userId}/properties/{propertyId}/tenants/{tenantId}: Tenants related to a specific property.
 * /users/{userId}/properties/{propertyId}/rentalPayments/{rentalPaymentId}: Rental payments made for a specific property.
 * /users/{userId}/properties/{propertyId}/expenses/{expenseId}: Expenses related to a specific property.
 * /users/{userId}/properties/{propertyId}/appointments/{appointmentId}: Appointments related to a specific property.
 * /users/{userId}/properties/{propertyId}/alerts/{alertId}: Alerts related to a specific property.
 * /users/{userId}/maintenanceRequests/{maintenanceRequestId}: Maintenance requests for properties owned by a specific user.
 *
 * Key Security Decisions:
 * - Strict user-ownership: Only the authenticated user can access data under their /users/{userId} path.
 * - Denormalization for Authorization: All subcollections (tenants, rentalPayments, expenses, appointments, alerts) include a `ownerId` field, copied from the parent `property`, allowing for authorization independence and efficient security rules.
 * - No public listing: Listing operations are restricted to the owner of the data.
 *
 * Authorization Independence: All subcollections like `tenants`, `rentalPayments`, `expenses`, `appointments`, and `alerts` include a `ownerId` field, copied from the parent `property`. This eliminates the need for `get()` calls in security rules, ensuring atomic operations and easy debugging.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is made by a signed-in user.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of the existing document.
     */
    function isExistingOwner(userId) {
      return isSignedIn() && resource.data.keys().hasAll(request.resource.data.keys()) && resource.data.id == request.resource.data.id && isOwner(userId);
    }

    /**
     * @description
     * @path /users/{userId}/properties/{propertyId}
     * @allow (create) - Authenticated user with ID 'user123' can create a property document under /users/user123/properties/property456 if request.auth.uid == user123
     * @deny (create) - Authenticated user with ID 'user456' cannot create a property document under /users/user123/properties/property456 because request.auth.uid != user123
     * @principle Enforces document ownership for writes
     */
    match /users/{userId}/properties/{propertyId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description
     * @path /users/{userId}/properties/{propertyId}/tenants/{tenantId}
     * @allow (create) - Authenticated user with ID 'user123' can create a tenant document under /users/user123/properties/property456/tenants/tenant789 if request.auth.uid == user123
     * @deny (create) - Authenticated user with ID 'user456' cannot create a tenant document under /users/user123/properties/property456/tenants/tenant789 because request.auth.uid != user123
     * @principle Enforces document ownership for writes
     */
    match /users/{userId}/properties/{propertyId}/tenants/{tenantId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description
     * @path /users/{userId}/properties/{propertyId}/rentalPayments/{rentalPaymentId}
     * @allow (create) - Authenticated user with ID 'user123' can create a rental payment document under /users/user123/properties/property456/rentalPayments/payment123 if request.auth.uid == user123
     * @deny (create) - Authenticated user with ID 'user456' cannot create a rental payment document under /users/user123/properties/property456/rentalPayments/payment123 because request.auth.uid != user123
     * @principle Enforces document ownership for writes
     */
    match /users/{userId}/properties/{propertyId}/rentalPayments/{rentalPaymentId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description
     * @path /users/{userId}/properties/{propertyId}/expenses/{expenseId}
     * @allow (create) - Authenticated user with ID 'user123' can create an expense document under /users/user123/properties/property456/expenses/expense789 if request.auth.uid == user123
     * @deny (create) - Authenticated user with ID 'user456' cannot create an expense document under /users/user123/properties/property456/expenses/expense789 because request.auth.uid != user123
     * @principle Enforces document ownership for writes
     */
    match /users/{userId}/properties/{propertyId}/expenses/{expenseId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description
     * @path /users/{userId}/properties/{propertyId}/appointments/{appointmentId}
     * @allow (create) - Authenticated user with ID 'user123' can create an appointment document under /users/user123/properties/property456/appointments/appointment789 if request.auth.uid == user123
     * @deny (create) - Authenticated user with ID 'user456' cannot create an appointment document under /users/user123/properties/property456/appointments/appointment789 because request.auth.uid != user123
     * @principle Enforces document ownership for writes
     */
    match /users/{userId}/properties/{propertyId}/appointments/{appointmentId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description
     * @path /users/{userId}/properties/{propertyId}/alerts/{alertId}
     * @allow (create) - Authenticated user with ID 'user123' can create an alert document under /users/user123/properties/property456/alerts/alert789 if request.auth.uid == user123
     * @deny (create) - Authenticated user with ID 'user456' cannot create an alert document under /users/user123/properties/property456/alerts/alert789 because request.auth.uid != user123
     * @principle Enforces document ownership for writes
     */
    match /users/{userId}/properties/{propertyId}/alerts/{alertId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description
     * @path /users/{userId}/maintenanceRequests/{maintenanceRequestId}
     * @allow (create) - Authenticated user with ID 'user123' can create a maintenance request document under /users/user123/maintenanceRequests/request456 if request.auth.uid == user123
     * @deny (create) - Authenticated user with ID 'user456' cannot create a maintenance request document under /users/user123/maintenanceRequests/request456 because request.auth.uid != user123
     * @principle Enforces document ownership for writes
     */
    match /users/{userId}/maintenanceRequests/{maintenanceRequestId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

     /**
     * @description
     * @path /users/{userId}/revenue/{revenueId}
     */
    match /users/{userId}/revenue/{revenueId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}