/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for rental property data.
 *
 * Data Structure:
 * - All data is nested under /users/{userId}, representing individual user accounts.
 * - Properties are stored under /users/{userId}/properties/{propertyId}.
 * - Tenants, RentalPayments, Expenses, Appointments, and Alerts are stored as subcollections under each property.
 * - Maintenance Requests are stored under /users/{userId}/maintenanceRequests/{maintenanceRequestId}.
 *
 * Key Security Decisions:
 * - All subcollections inherit ownership from their parent /properties/{propertyId} document, with the owner's UID denormalized onto each document.
 * - Listing operations are restricted to the owner of the parent document.
 *
 * Denormalization for Authorization:
 * - Subcollections like /tenants, /rentalPayments, etc. will contain an `ownerId` field that matches the owner of the parent /properties/{propertyId} document. This denormalization avoids costly `get()` calls in security rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the current user is signed in.
     * @path N/A (Helper Function)
     * @allow N/A (Helper Function)
     * @deny N/A (Helper Function)
     * @principle Authenticated access only.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the current user is the owner of the document based on the provided userId.
     * @path N/A (Helper Function)
     * @allow N/A (Helper Function)
     * @deny N/A (Helper Function)
     * @principle Enforces document ownership.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the current user is the owner of the existing document.
     * @path N/A (Helper Function)
     * @allow N/A (Helper Function)
     * @deny N/A (Helper Function)
     * @principle Enforces document ownership and document existence for updates and deletes.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Rules for documents in the /users/{userId}/properties/{propertyId} collection.
     * @path /users/{userId}/properties/{propertyId}
     * @allow (create) User Tu5oCEPnGXat4Rl6iLHUU0DxL4j1 can create a property document under /users/Tu5oCEPnGXat4Rl6iLHUU0DxL4j1/properties/{propertyId} if request.auth.uid matches userId.
     * @deny (create) User otherUser cannot create a property document under /users/Tu5oCEPnGXat4Rl6iLHUU0DxL4j1/properties/{propertyId}.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/properties/{propertyId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == propertyId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for documents in the /users/{userId}/properties/{propertyId}/tenants/{tenantId} collection.
     * @path /users/{userId}/properties/{propertyId}/tenants/{tenantId}
     * @allow (create) User Tu5oCEPnGXat4Rl6iLHUU0DxL4j1 can create a tenant document under /users/Tu5oCEPnGXat4Rl6iLHUU0DxL4j1/properties/{propertyId}/tenants/{tenantId} if request.auth.uid matches userId.
     * @deny (create) User otherUser cannot create a tenant document under /users/Tu5oCEPnGXat4Rl6iLHUU0DxL4j1/properties/{propertyId}/tenants/{tenantId}.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/properties/{propertyId}/tenants/{tenantId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for documents in the /users/{userId}/properties/{propertyId}/rentalPayments/{rentalPaymentId} collection.
     * @path /users/{userId}/properties/{propertyId}/rentalPayments/{rentalPaymentId}
     * @allow (create) User Tu5oCEPnGXat4Rl6iLHUU0DxL4j1 can create a rentalPayment document under /users/Tu5oCEPnGXat4Rl6iLHUU0DxL4j1/properties/{propertyId}/rentalPayments/{rentalPaymentId} if request.auth.uid matches userId.
     * @deny (create) User otherUser cannot create a rentalPayment document under /users/Tu5oCEPnGXat4Rl6iLHUU0DxL4j1/properties/{propertyId}/rentalPayments/{rentalPaymentId}.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/properties/{propertyId}/rentalPayments/{rentalPaymentId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for documents in the /users/{userId}/properties/{propertyId}/expenses/{expenseId} collection.
     * @path /users/{userId}/properties/{propertyId}/expenses/{expenseId}
     * @allow (create) User Tu5oCEPnGXat4Rl6iLHUU0DxL4j1 can create an expense document under /users/Tu5oCEPnGXat4Rl6iLHUU0DxL4j1/properties/{propertyId}/expenses/{expenseId} if request.auth.uid matches userId.
     * @deny (create) User otherUser cannot create an expense document under /users/Tu5oCEPnGXat4Rl6iLHUU0DxL4j1/properties/{propertyId}/expenses/{expenseId}.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/properties/{propertyId}/expenses/{expenseId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for documents in the /users/{userId}/properties/{propertyId}/appointments/{appointmentId} collection.
     * @path /users/{userId}/properties/{propertyId}/appointments/{appointmentId}
     * @allow (create) User Tu5oCEPnGXat4Rl6iLHUU0DxL4j1 can create an appointment document under /users/Tu5oCEPnGXat4Rl6iLHUU0DxL4j1/properties/{propertyId}/appointments/{appointmentId} if request.auth.uid matches userId.
     * @deny (create) User otherUser cannot create an appointment document under /users/Tu5oCEPnGXat4Rl6iLHUU0DxL4j1/properties/{propertyId}/appointments/{appointmentId}.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/properties/{propertyId}/appointments/{appointmentId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for documents in the /users/{userId}/properties/{propertyId}/alerts/{alertId} collection.
     * @path /users/{userId}/properties/{propertyId}/alerts/{alertId}
     * @allow (create) User Tu5oCEPnGXat4Rl6iLHUU0DxL4j1 can create an alert document under /users/Tu5oCEPnGXat4Rl6iLHUU0DxL4j1/properties/{propertyId}/alerts/{alertId} if request.auth.uid matches userId.
     * @deny (create) User otherUser cannot create an alert document under /users/Tu5oCEPnGXat4Rl6iLHUU0DxL4j1/properties/{propertyId}/alerts/{alertId}.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/properties/{propertyId}/alerts/{alertId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for documents in the /users/{userId}/maintenanceRequests/{maintenanceRequestId} collection.
     * @path /users/{userId}/maintenanceRequests/{maintenanceRequestId}
     * @allow (create) User Tu5oCEPnGXat4Rl6iLHUU0DxL4j1 can create a maintenanceRequest document under /users/Tu5oCEPnGXat4Rl6iLHUU0DxL4j1/maintenanceRequests/{maintenanceRequestId} if request.auth.uid matches userId.
     * @deny (create) User otherUser cannot create a maintenanceRequest document under /users/Tu5oCEPnGXat4Rl6iLHUU0DxL4j1/maintenanceRequests/{maintenanceRequestId}.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/maintenanceRequests/{maintenanceRequestId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}