rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // This rule matches any document in any collection.
    match /{document=**} {

      // A user can read a document only if they are authenticated and the document's 
      // ownerId field matches their own user ID. This rule applies to both single
      // document reads (get) and queries (list).
      // For this rule to work with queries, your client-side code MUST include
      // a `where("ownerId", "==", auth.currentUser.uid)` filter.
      allow read: if request.auth != null && request.auth.uid == resource.data.ownerId;

      // A user can create a document only if they are authenticated and they are
      // setting the ownerId on the new document to their own user ID.
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;

      // A user can update or delete a document only if they are authenticated and
      // the document's ownerId already matches their user ID.
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }
  }
}
